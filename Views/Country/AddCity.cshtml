@model TSShopping.Models.CityViewModel

@{
    ViewData["Title"] = "Create";
}
<flash dismissable="true" />

<h4>Ciudad</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StateId" />

            <partial name="_City" />

            <div class="form-group mt-2">
                <input type="submit" value="Guardar" class="btn btn-sm btn-outline-primary" />|
                <a asp-action="DetailsState" asp-route-id="@Model.StateId" class="btn btn-sm btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>