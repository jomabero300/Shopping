@model TSShopping.Data.Entities.Country

@{
    ViewData["Title"] = "Editar";
}

<flash dismissable="true" />

<h1>Editar</h1>

<h4>Pais</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <partial name="_Country" />

            <div class="form-group mt-2">
                <input type="submit" value="Guardar" class="btn btn-sm btn-outline-primary" /> |
                <a asp-action="Index" class="btn btn-sm btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</div>